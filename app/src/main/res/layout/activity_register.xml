<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#274A60"
    android:id="@+id/RelativeLayout_zhuce"
    tools:context="com.example.lizhi.rko.RegisterActivity">

    <RelativeLayout
        android:id="@+id/Relative_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp">

        <ImageView
            android:id="@+id/image_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/user" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/image_login"
            android:background="@null"
            android:hint="请输入用户名"
            android:paddingLeft="60dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Relative_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Relative_login"
        >
        <ImageView
            android:id="@+id/image_number"
            android:src="@mipmap/number"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/user_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_number"
            android:hint="请输入手机号码"
            android:textSize="20sp"
            android:textColorHint="#FFFFFF"
            android:paddingLeft="60dp"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Relative_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Relative_number"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/image_code"
            android:src="@mipmap/code"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/user_code"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_code"
            android:hint="请输入验证码"
            android:textSize="20sp"
            android:text="1234"
            android:textColorHint="#FFFFFF"
            android:paddingLeft="20dp"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/btn_code"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/username_code" />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/imageView3" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Relative_password_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Relative_code"
        >
        <ImageView
            android:id="@+id/image_password_1"
            android:src="@mipmap/password"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/user_password_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_password_1"
            android:hint="请输入密码"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:textColorHint="#FFFFFF"
            android:paddingLeft="60dp"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Relative_password_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Relative_password_1"
        >
        <ImageView
            android:id="@+id/image_password_2"
            android:src="@mipmap/password"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/user_password_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_password_2"
            android:hint="请重复输入密码"
            android:textSize="20sp"
            android:textColorHint="#FFFFFF"
            android:paddingLeft="60dp"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:background="#A72F1E"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
