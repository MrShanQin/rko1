<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/homepage"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_1"
            style="@style/Buttom"
            android:text="火灾信息"
            android:drawableTop="@mipmap/firenews"/>
        <Button
            android:id="@+id/button_2"
            style="@style/Buttom"
            android:text="故障信息"
            android:drawableTop="@mipmap/malfunctionnews"/>

        <Button
            android:id="@+id/button_3"
            style="@style/Buttom"
            android:drawableTop="@mipmap/messagecenter"
            android:text="消息中心" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_4"
            style="@style/Buttom"
            android:drawableTop="@mipmap/workinfo"
            android:text="值班信息" />

        <Button
            android:id="@+id/button_5"
            style="@style/Buttom"
            android:text="状态监测"
            android:drawableTop="@mipmap/conditionmonitoring"/>
        <Button
            android:id="@+id/button_6"
            style="@style/Buttom"
            android:text="拍照上传"
            android:drawableTop="@mipmap/photoupload"/>



    </LinearLayout>
    <ListView
        android:id="@+id/mListView_hp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>